{
  "manifest_version": 3,
  "name": "YouTubeYou",
  "version": "1.0",
  "description": "A YouTube Overhaul.",
  "permissions": ["tabs", "storage"],
  "host_permissions": ["https://www.youtube.com/*"],

  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "YouTube Theme -_-"
  },

  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": [
        "src/lib/browser-polyfill.js",
        "src/content/entrypoint.js"
      ],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "modules/assets/*",
        "modules/css/*.css",
        "modules/js/*.js",
        "presets/*.json",
        "src/util/*.js",
        "src/system/config.json"
      ],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}